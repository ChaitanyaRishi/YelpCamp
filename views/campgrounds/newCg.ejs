<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">
        New Campground
    </h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="post" class="validated-form" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title"> Enter Campground's Title: </label>
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Dusty Bay"
                    required>
                <div class="valid-feedback">Looks great!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location"> Enter Campground's Location: </label>
                <input class="form-control" type="text" name="campground[location]" id="location"
                    placeholder="Chicago, Illinois" required>
                <div class="valid-feedback">Looks great!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Enter Campground's Price(Per Night): </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="200.00" name="campground[price]" id="price"
                        aria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">Looks great!</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Enter Campground's Description: </label>
                <textarea class="form-control" placeholder="Located in a very pleasant location"
                    name="campground[description]" id="description" required></textarea>
                <div class="valid-feedback">Looks great!</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add Images: </label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" id="submit"> Submit </button>
            </div>

        </form>
        <a href="/campgrounds">go back!</a>
    </div>
</div>